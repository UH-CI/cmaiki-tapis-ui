{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "typeRoots": ["./types", "node_modules/@types"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "ui": ["./ui"],
      "ui/*": ["./ui/*"],
      "ui-formik": ["./ui-formik"],
      "ui-formik/*": ["./ui-formik/*"],
      "utils": ["./utils"],
      "utils/*": ["./utils/*"],
      "fixtures": ["./fixtures"],
      "fixtures/*": ["./fixtures/*"],
      "components": ["./components"],
      "components/*": ["./components/*"],
      "wrappers": ["./wrappers"],
      "wrappers/*": ["./wrappers/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}
